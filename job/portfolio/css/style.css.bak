	 .project{
      position: relative;
      height:200px;
	  width:250px;
	  border: 2px solid #1f242d;
      overflow: hidden;
    }

    .project img {
      display: block;
    }

    .caption {
      position: absolute;
      bottom: -100%; /* Initially, the caption is hidden below the container */
     
      width: 100%;
      background-color:#0ef; /* Background color for the caption */
      color: black;
      text-align: center;
      transition: bottom 0.3s; /* Smooth transition for the caption */
    }

    .project:hover .caption {
      bottom: 0; /* Slide the caption up to its original position when hovered */
    }
	



