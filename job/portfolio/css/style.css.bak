@media (max-width: 481px) {
    .containers {
        max-width: 100%; /* Adjust the maximum width as needed */
        margin: 0 20px; /* Adjust the margin as needed */
    }

    label {
        width: 100%; /* Make labels full-width */
    }
}
@media (max-width: 481px) {
    #contact h2 {
        font-size:10px;
	/* Adjust the maximum width as needed */
    }
}
@media (max-width: 481px) {
    .container {
        flex-direction: column; /* Stack .left and .right on top of each other */
    }

    .left {
        order: 1; /* Move .left below .right in the stacking order */
        text-align: center; /* Center-align text */
    }

    .right {
        order: 2; /* Move .right above .left in the stacking order */
    }

    .circle {
        width: 80%; /* Reduce the image width for smaller screens */
        height: auto; /* Allow the height to adjust proportionally */
        margin: 10px 0; /* Add margin for spacing between elements */
    }
}
@media (max-width: 1115px) {
    .container {
        flex-direction: column;
    }

    .left, .right {
        order: initial; /* Reset the order to its default value */
    }

    .circle {
        width: 60%; /* Adjust image width for screens between 481px and 619px */
        height: auto;
        margin: 10px 0;
    }
}
@media (max-width: 1115px) {
    .containers {
        max-width: 50%; /* Adjust the maximum width as needed */
        margin: auto;/* Adjust the margin as needed */
    }

   input, textarea { {
        width: 20%; /* Make labels full-width */
    }
}
