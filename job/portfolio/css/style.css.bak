 .glow-button {
            
            padding: 10px 20px;
            background-color: #0ef;
            color: black;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .glow-button:hover {
            animation: glow 1s infinite;
        }

        @keyframes glow {
            0% {
                background-color: #0ef;
                box-shadow: 0 0 5px #0ef;
            }
            50% {
                background-color: #0ef;
                box-shadow: 0 0 20px #0ef;
            }
            100% {
                background-color:#0ef;
                box-shadow: 0 0 5px #0ef;
            }
        }
